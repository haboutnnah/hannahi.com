#!/usr/bin/env bash

# Terminate script if there is an error

set -e

# Node Project Manager

echo -e "\e[96mInstalling Node Package Manager"
npm install

echo -e "\e[96mInstalling AMP Validator"
npm install -g amphtml-validator

# Ruby Gems

echo -e "\e[96mInstalling Jekyll"
gem install jekyll

echo -e "\e[96mInstalling HTML Proofer"
gem install html-proofer

echo -e "\e[96m Installing Jekyll Redirect From gem"
gem install jekyll-redirect-from

echo -e "\e[96m Installing Jekyll Sitemap gem"
gem install jekyll-sitemap

# Bundler Gems 

echo -e "\e[96mInstalling required Ruby gems"
bundle install

# Jekyll compile and start server

echo -e "\e[96mBuilding jekyll and setting up server"
bundle exec jekyll serve &

# HTML Proofer

echo -e "\e[96mTesting HTML and links of the frontpage"
bundle exec htmlproofer http://127.0.0.1:4000/index.html

echo -e "\e[96mTesting HTML and links of the Pokemon Go resource disambiguation page"
bundle exec htmlproofer http://127.0.0.1:4000/PokemonGo/index.html

echo -e "\e[96mTesting HTML and links of the current Pokemon Go strings page"
bundle exec htmlproofer http://127.0.0.1:4000/PokemonGo/PokemonGoStrings.html

echo -e "\e[96mTesting HTML and links of the Pokemon Go strings at launch"
bundle exec htmlproofer http://127.0.0.1:4000/PokemonGo/old/PokemonGoStrings.html

echo -e "\e[96mTesting HTML and links of the expanded Pokemon Go strings at launch"
bundle exec htmlproofer http://127.0.0.1:4000/PokemonGo/old/PokemonGoStringsFull.html

echo -e "\e[96mTesting HTML and links of the AMP frontpage"
bundle exec htmlproofer http://127.0.0.1:4000/amp/index.html

# AMP Validator

echo -e "\e[96mVerifying AMP formatting of AMP frontpage"
amphtml-validator http://127.0.0.1:4000/amp/index.html