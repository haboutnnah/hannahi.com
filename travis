#!/usr/bin/env bash
# Terminate script if there is an error

set -e

# Node Project Manager

echo -e "Installing Node Package Manager"
npm install

echo -e "Installing AMP Validator"
npm install -g amphtml-validator

# Ruby Gems

echo -e "Installing Jekyll"
gem install jekyll

echo -e "Installing HTML Proofer"
gem install html-proofer

echo -e " Installing Jekyll Redirect From gem"
gem install jekyll-redirect-from

echo -e " Installing Jekyll Sitemap gem"
gem install jekyll-sitemap

# Bundler Gems 

echo -e "Installing required Ruby gems"
bundle install

# Jekyll compile and start server

echo -e "Building jekyll and setting up server"
bundle exec jekyll serve &

# HTML Proofer

echo -e "Testing HTML and links of the frontpage"
bundle exec htmlproofer http://127.0.0.1:4000/index.html

echo -e "Testing HTML and links of the Pokemon Go resource disambiguation page"
bundle exec htmlproofer http://127.0.0.1:4000/PokemonGo/index.html

echo -e "Testing HTML and links of the current Pokemon Go strings page"
bundle exec htmlproofer http://127.0.0.1:4000/PokemonGo/PokemonGoStrings.html

echo -e "Testing HTML and links of the Pokemon Go strings at launch"
bundle exec htmlproofer http://127.0.0.1:4000/PokemonGo/old/PokemonGoStrings.html

echo -e "Testing HTML and links of the expanded Pokemon Go strings at launch"
bundle exec htmlproofer http://127.0.0.1:4000/PokemonGo/old/PokemonGoStringsFull.html

echo -e "Testing HTML and links of the AMP frontpage"
bundle exec htmlproofer http://127.0.0.1:4000/amp/index.html

# AMP Validator

echo -e "Verifying AMP formatting of AMP frontpage"
amphtml-validator http://127.0.0.1:4000/amp/index.html