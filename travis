#!/usr/bin/env bash
# Terminate script if there is an error

set -e

# Jekyll compile and start server

echo -e "\n\n\e[36mBuilding Jekyll\e[0m"
bundle exec jekyll build

# Node Project Manager

echo -e "\n\n\e[36mInstalling AMP Validator\e[0m"
npm install -g amphtml-validator

# HTML Proofer

echo -e "\n\n\e[36mChcking Syntax\e[0m"
ruby tests.rb


echo -e "\n\n\e[36mVerifying AMP formatting\e[0m"
amphtml-validator _site/amp/index.html