#!/usr/bin/env bash
# Terminate script if there is an error

set -e

# Jekyll compile and start server

echo -e "\e[36mBuilding Jekyll and setting up server\e[0m"
bundle exec jekyll serve &

# Node Project Manager

echo -e "\e[36mInstalling AMP Validator\e[0m"
npm install -g amphtml-validator

sleep 6
# HTML Proofer

echo -e "\e[36mTesting HTML and links of the frontpage\e[0m"
ruby travis.rb http://localhost:4000/index.html

echo -e "\e[36mTesting HTML and links of the Pokemon Go resource disambiguation page\e[0m"
ruby travis.rb http://localhost:4000/PokemonGo/index.html

echo -e "\e[36mTesting HTML and links of the current Pokemon Go strings page\e[0m"
ruby travis.rb http://localhost:4000/PokemonGo/PokemonGoStrings.html

echo -e "\e[36mTesting HTML and links of the Pokemon Go strings at launch\e[0m"
ruby travis.rb http://localhost:4000/PokemonGo/old/PokemonGoStrings.html

echo -e "\e[36mTesting HTML and links of the expanded Pokemon Go strings at launch\e[0m"
ruby travis.rb http://localhost:4000/PokemonGo/old/PokemonGoStringsFull.html

echo -e "\e[36mTesting HTML and links of the PyHDDKeepAlive homepage\e[0m"
ruby travis.rb http://localhost:4000/PyHDDKeepAlive/index.html

echo -e "\e[36mTesting HTML and links of the AMP frontpage\e[0m"
ruby travis.rb http://localhost:4000/amp/index.html

# AMP Validator

echo -e "\e[36mVerifying AMP formatting of AMP frontpage\e[0m"
amphtml-validator http://localhost:4000/amp/index.html